class Inventory

@@price_index[price]



def initialize(capacity)
	@cookies = {
		:chocolate_chip => 0, 
		:banana_nut => 0
	}
	@capacity = capacity #??????????????????
	@stock = 0
end

def add_cookie(flavor, quantity)
	if current_stock + quantity > capacity
		return false
	end
	@cookies[flavor.to_sym] += quantity
	@stock += quantity
	true
end

